  "common_mistakes": [
    {
      "mistake": "Applying all nitrogen at once",
      "why_bad": "Causes excessive growth, lodging, disease susceptibility, and nutrient leaching",
      "correct_approach": "Split nitrogen into 3 doses as per schedule"
    },
    {
      "mistake": "Not irrigating after urea application",
      "why_bad": "Urea volatilizes and nitrogen escapes as ammonia gas - 30-40% loss",
      "correct_approach": "Irrigate within 2-3 days of urea application"
    },
    {
      "mistake": "Applying fertilizer in dry soil",
      "why_bad": "Poor nutrient uptake, potential salt damage to roots",
      "correct_approach": "Irrigate 1 day before or ensure soil has moisture"
    },
    {
      "mistake": "Using last year's fertilizer rate regardless of conditions",
      "why_bad": "Different varieties, soil conditions, yield targets need different rates",
      "correct_approach": "Adjust based on current crop, soil, and yield target"
    },
    {
      "mistake": "Skipping phosphorus at sowing",
      "why_bad": "Cannot be corrected later, leads to poor root development and permanent yield loss",
      "correct_approach": "Always apply full P dose at sowing time"
